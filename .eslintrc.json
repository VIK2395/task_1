{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": "warn", // run lint to check prettier errors
    "no-unused-vars": "off",
    "no-console": "warn",
    "func-names": "off",
    "no-process-exit": "off"
  }
}
